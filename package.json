{
  "name": "synthetix-v3",
  "version": "3.0.0-alpha.2",
  "private": true,
  "description": "Mono Repo with Contracts and JS tooling",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Synthetixio/synthetix-v3.git"
  },
  "bugs": {
    "url": "https://github.com/Synthetixio/synthetix-v3/issues"
  },
  "author": "Synthetix",
  "license": "MIT",
  "homepage": "https://github.com/Synthetixio/synthetix-v3#readme",
  "scripts": {
    "build": "npm run -w ./packages/core-utils -w ./packages/hardhat-router build && npm run --workspaces --if-present build",
    "test": "npm run --workspaces --if-present test",
    "coverage": "npm run --workspaces --if-present coverage",
    "lint:js": "prettier --check '**/*.{t,j}s' && eslint --max-warnings=0 '**/*.{t,j}s'",
    "lint:js:fix": "prettier --write '**/*.{t,j}s' && eslint --max-warnings=0 --fix '**/*.{t,j}s'",
    "lint:sol": "prettier --check 'packages/**/*.sol' && solhint --max-warnings=0 'packages/**/*.sol'",
    "lint:sol:fix": "prettier --write 'packages/**/*.sol' && solhint --max-warnings=0 --fix  'packages/**/*.sol'",
    "lint:quick": "pretty-quick --check --staged --pattern '**/*.(js|ts|sol)'",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint": "npm run lint:js && npm run lint:sol",
    "check-packages": "bin/check-packages"
  },
  "devDependencies": {
    "@types/node": "18.8.5",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-no-only-tests": "2.6.0",
    "hardhat": "2.9.3",
    "node-fetch": "2.6.7",
    "pre-commit": "1.2.2",
    "prettier": "2.3.2",
    "prettier-plugin-solidity": "1.0.0-beta.17",
    "pretty-quick": "3.1.1",
    "solhint": "3.3.6",
    "typescript": "4.7.4"
  },
  "pre-commit": [
    "lint:quick",
    "check-packages"
  ],
  "workspaces": [
    "packages/*",
    "markets/*"
  ],
  "engines": {
    "node": "^16.16.0",
    "npm": "^8.11.0"
  }
}
