{
  "name": "@synthetixio/perps-market",
  "version": "3.1.1",
  "description": "Perps Market implementation",
  "scripts": {
    "build": "hardhat compile --force && hardhat storage:verify && hardhat cannon:build",
    "check:storage": "git diff --exit-code storage.dump.sol",
    "start": "yarn build && yarn cannon-build",
    "clean": "hardhat clean",
    "cannon-build": "hardhat cannon:build",
    "test": "hardhat test",
    "coverage": "yarn test",
    "compile-contracts": "hardhat compile",
    "publish-contracts": "yarn build && cannon publish synthetix-perps-market:$(node -p 'require(`./package.json`).version') --quiet",
    "size-contracts": "hardhat compile && hardhat size-contracts",
    "postpack": "yarn publish-contracts"
  },
  "keywords": [],
  "author": "Synthetix",
  "license": "MIT",
  "devDependencies": {
    "@ethersproject/abi": "5.7.0",
    "@ethersproject/providers": "5.7.2",
    "@nomiclabs/hardhat-ethers": "2.2.1",
    "@synthetixio/common-config": "workspace:*",
    "@synthetixio/core-contracts": "workspace:*",
    "@synthetixio/core-modules": "workspace:*",
    "@synthetixio/core-utils": "workspace:*",
    "@synthetixio/main": "workspace:*",
    "@synthetixio/oracle-manager": "workspace:*",
    "@synthetixio/spot-market": "workspace:*",
    "@synthetixio/wei": "2.74.4",
    "@usecannon/cli": "2.4.7",
    "ethers": "^5.0.0",
    "hardhat": "2.13.0",
    "solidity-docgen": "0.6.0-beta.31",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  }
}
