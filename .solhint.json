{
  "extends": ["solhint:recommended"],
  "plugins": [],
  "rules": {
    "compiler-version": ["error", "^0.7.0"],
    "contract-name-camelcase": "off",
    "no-complex-fallback": "off",
    "no-inline-assembly": "off",
    "private-vars-leading-underscore": [
      "error",
      {
        "strict": true
      }
    ],
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ]
  }
}
