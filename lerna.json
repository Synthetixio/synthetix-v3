{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "3.10.2",
  "exact": true,
  "changelog": false,
  "ignoreChanges": [
    "**/test/**",
    "**/*.md"
  ],
  "private": false,
  "push": true,
  "command": {
    "version": {
      "allowBranch": [
        "main"
      ]
    },
    "command": {
      "publish": {
        "removePackageFields": [
          "devDependencies",
          "scripts",
          "depcheck"
        ]
      }
    }
  }
}
